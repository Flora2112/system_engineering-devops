#!/usr/bin/env bash.
# Define the filename
file="school"

# 1. Check if the file exists
if [ -e "$file" ]; then
    echo "school file exists"

    # 2. Check if the file is empty or not
    # -s returns true if file exists and has a size greater than zero
    if [ -s "$file" ]; then
        echo "school file is not empty"
    else
        echo "school file is empty"
    fi

    # 3. Check if the file is a regular file
    # -f returns true if it is a regular file (not a directory, etc.)
    if [ -f "$file" ]; then
        echo "school is a regular file"
    fi

else
    echo "school file does not exist"
fi
