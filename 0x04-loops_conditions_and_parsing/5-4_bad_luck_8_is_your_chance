#!/usr/bin/env bash
# This script loops from 1 to 10 and prints specific messages for iterations 4 and 8.

# Initialize the counter variable
counter=1

# Start the while loop to run until counter is greater than 10
while [ "$counter" -le 10 ]
do
    # Check if the current iteration is the 4th
    if [ "$counter" -eq 4 ]
    then
        echo "bad luck"
    # Check if the current iteration is the 8th
    elif [ "$counter" -eq 8 ]
    then
        echo "good luck"
    # For all other iterations
    else
        echo "Best School"
    fi
    
    # Increment the counter
    counter=$((counter + 1))
done
