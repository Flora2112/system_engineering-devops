#!/usr/bin/env bash
# A Bash script that loops indefinitely and handles SIGTERM signals

# Trap SIGTERM and execute echo instead of terminating
trap "echo 'I am invincible!!!'" SIGTERM

while true
do
    echo "To infinity and beyond"
    sleep 2
done

# A Bash script that sends a SIGTERM to the 7-highlander process
pkill -f 7-highlander
