#!/usr/bin/env bash
# This script displays a message indefinitely and handles SIGTERM

# Define a function to execute when SIGTERM is received
invincible_response() {
    # Using 'printf' ensures no accidental trailing spaces or specific newline differences
    printf "I am invincible!!!\n"
}

# Trap the SIGTERM signal (15) to execute the function
trap 'invincible_response' SIGTERM

while true; do
    echo "To infinity and beyond"
    sleep 2
done
