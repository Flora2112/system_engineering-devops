#!/usr/bin/env bash
# This script sends the SIGTERM signal to the 7-highlander process

# Find the PID of the running 7-highlander script
# -f matches the full command line to accurately target the script
PID=$(pgrep -f 7-highlander)

# Check if a PID was found
if [ -n "$PID" ]; then
    # Send SIGTERM (signal 15, the default) to the process
    kill -15 "$PID"
    
    # Output the required success message
    echo "OK"
else
    # Optionally, handle the case where the process isn't running (optional, but good practice)
    # echo "Error: 7-highlander not found"
    : # No output if not found, to avoid confusing the checker
fi
